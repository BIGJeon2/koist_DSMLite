<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_background_normal"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/crackIDTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pretendardbold"
            android:text="@string/remuneration_data"
            android:textColor="?attr/default_color"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/crackInfoContainer"
        android:layout_marginTop="6dp"
        android:layout_below="@id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crackImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_crk001" />
    <LinearLayout
        android:layout_toEndOf="@id/crackImageView"
        android:padding="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="91dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:padding="6dp"
                android:text="Number"
                android:fontFamily="@font/pretendardbold"
                android:background="@drawable/default_background_normal"


                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/crackNumberTv"

                android:padding="6dp"
                android:hint="Please Select Crack."
                android:background="@drawable/default_background_child"

                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:padding="6dp"
                android:text="Type"
                android:fontFamily="@font/pretendardbold"
                android:background="@drawable/default_background_normal"


                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/crackTypeTv"
                android:padding="6dp"
                android:hint="-"

                android:background="@drawable/default_background_child"

                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:padding="6dp"
                android:text="Area"
                android:fontFamily="@font/pretendardbold"
                android:background="@drawable/default_background_normal"


                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/crackAreaTv"

                android:padding="6dp"
                android:hint="-"
                android:background="@drawable/default_background_child"

                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:fontFamily="@font/pretendardbold"
                android:padding="6dp"
                android:text="Input Type"
                android:background="@drawable/default_background_normal"


                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/crackInputTv"
                android:padding="6dp"

                android:hint="-"
                android:background="@drawable/default_background_child"

                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/crackInfoContainer"
        android:layout_marginTop="6dp"
        android:background="@drawable/default_background_normal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@color/TRANSPARENT"
            android:fontFamily="@font/pretendardbold"
            android:gravity="center_vertical"
            android:text="@string/remuneration_info"
            android:textColor="?attr/default_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/relativeLayout1"

            android:text="보수 현황 : "
            android:textColor="?attr/default_color"
             />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/default_spinner_background">

            <Spinner
                android:id="@+id/repairStateSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:popupBackground="@drawable/default_spinner_background"
                android:theme="@style/SpinnerTheme" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/default_background_normal"
        android:padding="6dp">
        <Button
            android:id="@+id/closeBtn"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="6dp"
            android:background="@color/secondary_text_color"
            android:textColor="@color/red"
            android:textSize="16sp"

            android:text="@string/close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/saveBtn"
            android:layout_alignParentEnd="true"
            android:background="?attr/default_color"
            android:textColor="@color/white"
            android:textSize="16sp"

            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noteEditableContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relativeLayout6"
        android:layout_below="@id/container"
        android:background="@drawable/default_background_normal"
        android:padding="6dp">

        <EditText
            android:id="@+id/noteEditTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_background_child"

            android:gravity="left"
            android:hint="작성된 내용이 없습니다."
            android:inputType="textMultiLine"
            android:lineSpacingExtra="6dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
</RelativeLayout>