<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/default_color"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/crackIDTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pretendardbold"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relativeLayout6"
        android:layout_below="@id/relativeLayout5"
        android:background="@drawable/default_background_child">

        <TextView
            android:id="@+id/dialogScriptTV"
            android:textSize="16sp"
            android:fontFamily="@font/pretendardbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/dialogSubScriptTV"
            android:layout_below="@id/dialogScriptTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/relativeLayout6"
        android:background="@drawable/default_background_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="6dp">
        <Button
            android:id="@+id/closeBtn"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@id/confirmBtn"
            android:background="@drawable/default_disable_btn_background"
            android:textColor="@color/white"
            android:text="@string/close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_alignParentEnd="true"
            android:background="?attr/default_color"
            android:textColor="@color/white"
            android:text="@string/confirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>